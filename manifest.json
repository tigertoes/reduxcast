{
  "name": "Reduxcast",
  "description": "Playback Redux stored content onto your Chromecast",
  "version": "0.0.1",
  "icons": {
    "128": "logo.png"
  },
  "permissions": [
    "https://www.bbcredux.com/*",
    "https://i.bbcredux.com/*"
  ],      
  "content_scripts": [{
     "matches": ["https://www.bbcredux.com/*", "https://i.bbcredux.com/*"],
          "js": ["extension.js", "reduxcast.js"],
         "css": ["reduxcast.css"]
  }],
  "web_accessible_resources":["cast_off.png", "reduxcast.js"],
  "manifest_version": 2
}
